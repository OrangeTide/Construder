{
  vol_draw_val (val);
}

void v_vol_draw_src ()
{
  vol_draw_src ();
}

void fill_model_draw_dst ()
{
  int x, y ,z;
  for (x = 0; x < sidelen; x++)
    for (y = 0; y < sidelen; y++)
      for (z = 0; z < sidelen; z++)
        model[OFFS(x,y,z)] = DRAW_DST(x,y,z);
}


