#!/opt/perl/bin/perl
use EV;
use common::sense;
use Games::Construder;
use Games::Construder::Server;
use Games::Construder::Logging;

ctr_enable_log_categories ('info', 'error', 'warn');

Games::Construder::Debug::init ("server");

our $server;
$server = Games::Construder::Server->new;
$server->init;
$server->listen;

EV::loop;
